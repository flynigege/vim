function! MySys()
	if has("win32")
		return "win32"
	elseif has("unix")
		return "unix"
	else
		return "mac"
	endif
endfunction
"Set shell to be bash
if MySys() == "unix" || MySys() == "mac"
	set shell=zsh
else
	"I have to run win32 python without cygwin
	"set shell=E:cygwininsh
endif

